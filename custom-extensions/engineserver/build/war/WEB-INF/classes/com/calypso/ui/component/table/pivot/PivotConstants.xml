	<bean id="com.jidesoft.pivot.PivotConstants.AREA_DATA"
		class="org.springframework.beans.factory.config.FieldRetrievingFactoryBean" />

	<bean id="com.jidesoft.grid.Field.SORT_ORDER_ASCENDING"
